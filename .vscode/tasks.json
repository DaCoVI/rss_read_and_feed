{
    "version": "2.0.0",
    "label": "Watch unit tests",
    "type": "shell",
    "command": "${workspaceFolder}/.venv/bin/python",
    "args": [
        "-m",
        "pytest_watch",
        "--runner",
        "${workspaceFolder}/.venv/bin/pytest -q -m unit --cov=src --cov-report=term-missing"
    ],
    "options": {
        "cwd": "${workspaceFolder}"
    },
    "isBackground": true,
    "problemMatcher": []
}